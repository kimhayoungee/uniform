	<!-- 기안서작성 _문서테이블 insert -->
	<insert id="documentInsert" parameterType="eadocument">
		INSERT INTO UNIFORM_EADOCUMENT(
		     DO_DOCNO
		    ,DO_TYPE
		    ,DO_WRITERNO
		    ,DO_WRITER
		    ,DO_TITLE
