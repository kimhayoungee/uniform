		    ,#{gi_data, jdbcType=VARCHAR}
		    ,#{gi_attach, jdbcType=VARCHAR}
	<!--  	    ,'Y'-->
		    ,TO_DATE(TO_CHAR(SYSDATE,'YYYY-MM-DD HH:MI:SS'),'YYYY-MM-DD HH:MI:SS')
		)
	</insert>
	
