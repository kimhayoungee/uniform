      FROM   UNIFORM_EAPOOM
   </select>	
	
	<!-- 결재 채번 -->
	<select id="eaChaebun" resultType="eaapproval">
		SELECT TO_CHAR(NVL(MAX(SUBSTR(EA_NO,-4)),0)+1)	EA_NO
		FROM   UNIFORM_EA
	</select>	

